<h1><%= @cocktail.name %></h1>
<p>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
       <%= dose.ingredient.name %> | <%= dose.description %>
      </li>
    <% end %>
  </ul>
  <% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
</p>
<%= link_to 'Back to Cocktails list', cocktails_path, class: "btn btn-primary" %>
<%= link_to 'New Dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
